{
	"name": "@monorepo/shared",
	"version": "1.0.0",
	"private": true,
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && cp src/styles.css dist/ && npx tailwindcss -i src/styles.css -o dist/styles.css",
		"dev": "npx babel src --out-dir dist --extensions \".ts,.tsx\" --copy-files --watch",
		"clean": "rm -rf dist",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-native": "0.76.9"
	},
	"devDependencies": {
		"@babel/cli": "^7.24.0",
		"@babel/core": "^7.24.0",
		"@babel/preset-env": "^7.24.0",
		"@babel/preset-typescript": "^7.23.3",
		"@types/react": "^18.2.43",
		"@types/react-native": "^0.73.0",
		"metro-react-native-babel-preset": "^0.77.0",
		"nativewind": "^4.0.1",
		"postcss": "^8.4.35",
		"tailwindcss": "^3.4.1",
		"typescript": "^5.3.3"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-native": "0.76.9"
	}
}
