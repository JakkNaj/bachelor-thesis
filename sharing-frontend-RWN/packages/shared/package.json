{
	"name": "@monorepo/shared",
	"version": "1.0.0",
	"private": true,
	"main": "./dist/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"src/api/generated/"
	],
	"scripts": {
		"build": "npm run generate-api && npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
		"build:cjs": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps",
		"build:esm": "cross-env BABEL_ENV=esm babel src --out-dir dist/esm --extensions \".ts,.tsx\" --source-maps",
		"build:types": "tsc --emitDeclarationOnly",
		"dev": "npm run build -- --watch",
		"clean": "rm -rf dist",
    "generate-api": "orval --config src/api/orval.config.ts"
	},
	"dependencies": {
		"@types/yup": "^0.32.0",
		"react": "^18.2.0",
		"react-native": "0.76.9",
		"yup": "^1.6.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.24.1",
		"@babel/core": "^7.24.3",
		"@babel/preset-env": "^7.24.3",
		"@babel/preset-react": "^7.24.1",
		"@babel/preset-typescript": "^7.24.1",
		"@types/react": "^18.2.43",
		"@types/react-native": "^0.73.0",
		"cross-env": "^7.0.3",
		"orval": "^7.8.0",
		"typescript": "^5.3.3",
    "axios": "^1.6.0",
    "expo-secure-store": "^14.0.1"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-native": "0.76.9",
    "js-cookie": "^3.0.5"
	}
}
