{
  "expo": {
    "name": "multiplatform-RNW",
    "slug": "multiplatform-RNW",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "backgroundColor": "#ffffff",
      "themeColor": "#ffffff",
      "splash": {
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      },
      "optimization": {
        "splitChunks": true,
        "treeshake": true,
        "removeUnusedImports": true
      },
      "build": {
        "babel": {
          "include": ["@expo/vector-icons"]
        }
      },
      "meta": {
        "title": "Multiplatform RNW",
        "description": "A cross-platform application built with React Native Web",
        "viewport": "width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no",
        "apple-mobile-web-app-capable": "yes",
        "apple-mobile-web-app-status-bar-style": "black-translucent"
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    }
  }
}
